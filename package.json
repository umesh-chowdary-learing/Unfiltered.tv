{
    "name": "Unfiltered.tv",
    "version": "1.0.0",
    "description": "A news website with real-time updates, state management, and basic authentication.",
    "main": "index.js",
    "scripts": {
      "start": "node backend/server.js",
      "dev": "concurrently \"npm run client\" \"npm run server\"",
      "client": "cd frontend && npm start",
      "server": "cd backend && nodemon server.js",
      "build": "cd frontend && npm run build"
    },
    "dependencies": {
      "bcryptjs": "^2.4.3",
      "cors": "^2.8.5",
      "dotenv": "^16.0.3",
      "express": "^4.18.2",
      "jsonwebtoken": "^9.0.1",
      "mongoose": "^7.0.2"
    },
    "devDependencies": {
      "concurrently": "^8.2.0",
      "nodemon": "^3.0.1"
    }
  }